<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_pannel_background_iv"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_first_album_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_pannel_btn_nugu_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_mike"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_ticket_iv"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id="@+id/home_pannel_btn_ticket_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_ticket"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_setting_iv"
            app:layout_constraintTop_toTopOf="parent"

            />

        <ImageView
            android:id="@+id/home_pannel_btn_setting_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_setting"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/home_pannel_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매혹적인 음색의 여성 보컬\n팝"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu_iv"/>

        <ImageView
            android:id="@+id/home_pannel_btn_play_iv"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:src="@drawable/btn_panel_play_large"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu_iv"
            />

        <ImageView
            android:id="@+id/home_pannel_album_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_background_iv"/>
        <TextView
            android:id="@+id/home_pannel_album_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 36곡 2020.06.05"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_img_iv"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/home_pannel_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In my Bed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_album_img_iv"
            />
        <TextView
            android:id="@+id/home_pannel_album_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bear"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_album_title_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img_iv"

            />

        <TextView
            android:id="@+id/home_panel_singer_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 발매 음악"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_background_iv"
            android:textSize="17dp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="해외"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_background_iv" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="국내"

            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_background_iv" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="종합"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_background_iv" />


        <ImageView
            android:id="@+id/home_pannel_playlist_img_iv"

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/img_album_exp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_panel_singer_title_tv"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Butter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_playlist_img_iv" />

        <ImageView
            android:id="@+id/home_panel_album_banner_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_home_viewpager_exp"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_background_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="190dp"
            ></ImageView>

            <TextView
                android:id="@+id/home_panel_errdaypotcast_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매일 들어도 좋은 팟캐스트"

                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/home_panel_album_banner_iv"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="25dp"


                ></TextView>

        <ImageView
            android:id="@+id/home_sisun_panel_iv"
            android:layout_width="224dp"
            android:layout_height="178dp"
            android:src="@drawable/img_potcast_exp"
            app:layout_constraintTop_toBottomOf="@+id/home_panel_album_banner_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/sisun_panel_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            app:layout_constraintTop_toBottomOf="@+id/home_sisun_panel_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="25dp"></TextView>

        <TextView
            android:id="@+id/sisun_panel_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가수"
            app:layout_constraintTop_toBottomOf="@+id/sisun_panel_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="25dp"
            android:textSize="18dp"></TextView>


        <TextView
            android:id="@+id/videocollection_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비디오 콜렉션"
            android:textStyle="bold"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/sisun_panel_singer_tv"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"></TextView>

        <ImageView
            android:id="@+id/home_video_exp_iv"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:src="@drawable/img_video_exp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/videocollection_tv"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"></ImageView>

        <TextView
            android:id="@+id/video_exp_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            app:layout_constraintTop_toBottomOf="@+id/home_video_exp_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"

            android:textSize="25dp"></TextView>

        <TextView
            android:id="@+id/video_exp_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가수"
            app:layout_constraintTop_toBottomOf="@+id/video_exp_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"></TextView>

        <ImageView
            android:id="@+id/home_discovery_banner_aos"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:src="@drawable/discovery_banner_aos"
            app:layout_constraintTop_toBottomOf="@id/video_exp_singer_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"></ImageView>

        <ImageView
            android:id="@+id/home_yanolja_banner_iv"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/img_home_viewpager_exp2"
            app:layout_constraintTop_toBottomOf="@+id/home_discovery_banner_aos"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"></ImageView>

        <LinearLayout

            android:id="@+id/home_under_sns_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/home_yanolja_banner_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <ImageView
                android:id="@+id/home_facebook_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_main_facebook"
                android:layout_marginHorizontal="15dp"
                android:layout_marginStart="80dp"
                ></ImageView>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_main_instagram"

                android:layout_marginHorizontal="15dp"></ImageView>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_main_youtube"

                android:layout_marginHorizontal="15dp"></ImageView>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_main_twitter"
                android:layout_marginHorizontal="15dp"></ImageView>



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(주)드림어컴퍼니 사업자 정보"
            android:textSize="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/home_under_sns_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"></TextView>









    </androidx.constraintlayout.widget.ConstraintLayout>







</ScrollView>